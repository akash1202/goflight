<?xml version="1.0" encoding="utf-8"?>
<FitWindowsFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallpaper"
    android:scaleType="fitXY"
    tools:context="ca.cegepgim.goflight.SplashActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        >
<TextView
    android:id="@+id/titleInSplash"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Go Flight"
    android:textAllCaps="false"
    android:textColor="@color/colorAccent"
    android:textStyle="bold"
    android:textSize="60dp" />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:text="&#8482;"
    android:textColor="@color/colorAccent"
    android:textSize="20dp"
    android:layout_marginTop="45dp"
    android:layout_gravity="bottom"
    android:layout_marginRight="15dp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  always safe and smart"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#174;"
        android:textColor="@color/colorAccent"
        android:textSize="13dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="end"
        android:layout_marginRight="50dp" />
    <ProgressBar
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:indeterminateTint="@color/design_default_color_background"
        android:layout_gravity="center"/>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loader"
        style="@style/AVLoadingIndicatorView.Small"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:indicatorName="LineScalePulseOutIndicator"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"
        android:text="....Wait...."
        android:textSize="20dp"  />
</FitWindowsFrameLayout>
